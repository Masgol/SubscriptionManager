<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp">

    <RelativeLayout
        android:id="@+id/MainScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/curvedframe_dark"
        android:layout_gravity="center"
        android:visibility="visible"

        >
        <ImageView
            android:id="@+id/mainscreenimageView"
            android:layout_width="150dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="150dp"
            android:background="@drawable/mainscreenbackgroundicon"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/mainscreentextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mainscreenimageView"
            android:text="Subscription Manager"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/subscriptionstextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mainscreentextview"
            android:text="Subscriptions:"
            android:textSize="25sp"
            android:textColor="#C8C8C8"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="45dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/subscriptionstextview"
            android:text="Total Cost: "
            android:textSize="25sp"
            android:textColor="#C8C8C8"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="45dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/TotalSubscriptionCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/mainscreentextview"
            android:text="0"
            android:textColor="#C8C8C8"

            android:textSize="25sp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="45dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/TotalSubscriptionCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/TotalSubscriptionCount"
            android:text="0"
            android:textColor="#C8C8C8"

            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="45dp"
            android:layout_centerHorizontal="true"/>



    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>